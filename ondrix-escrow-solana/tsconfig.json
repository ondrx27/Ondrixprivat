{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["tests-v3-individual-timers/**/*"],
  "exclude": ["dist", "node_modules", "tests-archive", "target"]
}